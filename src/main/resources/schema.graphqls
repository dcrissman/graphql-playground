type Post {
    id: ID!
    title: String!
    text: String!
    category: String
    author: Author
}
 
type Author {
    id: ID!
    name: String!
    thumbnail: String
    posts: [Post]!
}
 
# The Root Query for the application
schema {
    query: QueryType
}

type QueryType {
    posts : [Post]!
    recentPosts(count: Int, offset: Int): [Post]!
    authors : [Author]!
}
